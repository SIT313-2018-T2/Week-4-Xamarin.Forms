<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="week4.TemperatureConverter">

    <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>
        0, 20, 0, 0
      </OnPlatform.iOS>
      <OnPlatform.Android>
        0, 0, 0, 0
      </OnPlatform.Android>
     </OnPlatform>
  </ContentPage.Padding> 

    <ContentPage.Content>
            <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Celsius" WidthRequest="100">
                </Label>
                <Entry x:Name="txtCelsius"  
                        Placeholder="Enter celsius temperature value"
                        TextChanged="Handle_TextChanged">
                </Entry>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Fahrenheit" WidthRequest="100">
                </Label>
                <Entry x:Name="txtFah" WidthRequest="100" >
                </Entry>
            </StackLayout>
        </StackLayout>

        
    </ContentPage.Content>
</ContentPage>
